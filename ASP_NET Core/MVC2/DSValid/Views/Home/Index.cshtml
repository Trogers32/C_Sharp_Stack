@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

    @model IndexViewModel
    <form asp-action="Create" asp-controller="Home" method="post" class="mx-auto w-50">
            <span asp-validation-for="newUser.Username"></span>
        <div class="row">
            <label asp-for="newUser.Username"></label>
            <input asp-for="newUser.Username">
        </div>
            <span asp-validation-for="newUser.Location"></span>
        <div class="row">
            <label asp-for="newUser.Location"></label>
            <input asp-for="newUser.Location">
        </div>
            <span asp-validation-for="newUser.Language"></span>
        <div class="row">
            <label asp-for="newUser.Language"></label>
            <input asp-for="newUser.Language">
        </div>
            <span asp-validation-for="newUser.Comment"></span>
        <div class="row">
            <label asp-for="newUser.Comment"></label>
            @Html.TextArea("newUser.Comment", new { @class = "form-control", style="width:50%;" })  
        </div>
        <input value="Add User" type="submit">    
    </form>