@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="w-75 border-bottom border-dark pr-1">
    <h3 class="text-center">Products | <a href="/categories">Categories</a></h3>
</div>
<div class="w-75 row">
    <div class="col border-right border-dark">
        <h4 class="text-center">New Product</h4>
        <form asp-action="CreateProduct" asp-controller="Home" method="post" class="mx-auto w-50">
            <div class="row">
                <label class="col" asp-for="Name">Name: </label>
                <input class="col" asp-for="Name">
            </div>
            <div class="row">
                <label class="col" asp-for="Description">Description: </label>
                <input class="col" asp-for="Description">
            </div>
            <div class="row">
                <label class="col" asp-for="Price">Price: </label>
                <input class="col" asp-for="Price">
            </div>
            <input class="float-right" value="Create" type="submit">   
        </form>
        <div asp-validation-summary="All" class="mx-auto w-50 text-danger"></div>
    </div>
    <div class="col border-left border-dark">
        <h4 class="text-center">Existing Products</h4>
        @foreach(var i in ViewBag.Products){
            <p><a href="/products/@i.ProductId">@i.Name</a></p>
        }
    </div>
</div>
