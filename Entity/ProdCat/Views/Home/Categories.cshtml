
@model Category
<div class="w-75 border-bottom border-dark pr-1">
    <h3 class="text-center"><a href="/">Products</a> | Categories</h3>
</div>
<div class="w-75 row">
    <div class="col border-right border-dark">
        <h4 class="text-center">New Category</h4>
        <form asp-action="CreateCategory" asp-controller="Home" method="post" class="mx-auto w-50">
            <div class="row">
                <label class="col" asp-for="Name">Name: </label>
                <input class="col" asp-for="Name">
            </div>
            <input class="float-right" value="Create" type="submit">   
        </form>
        <div asp-validation-summary="All" class="mx-auto w-50 text-danger"></div>
    </div>
    <div class="col border-left border-dark">
        <h4 class="text-center">Existing Categories</h4>
        @foreach(var i in ViewBag.Categories){
            <p><a href="/Categories/@i.CategoryId">@i.Name</a></p>
        }
    </div>
</div>