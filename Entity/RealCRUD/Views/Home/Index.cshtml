@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
</div>
<div class="w-75 mx-auto">
    <div class="row">
        <div class="col-5 text-center">
            <h5 class="border-bottom border-dark">Check out some recent dishes!</h5>
        </div>
        <div class="col-3"></div>
        <div class="col-4">
            <a href="/new">Add a Dish</a>
        </div>
    </div>
    <div class="">
        @{
            foreach(var i in ViewBag.goods){
                <p><a href="/@i.Id">@i.Name</a> by @i.Chef</p>
            }
        }
    </div>
</div>
