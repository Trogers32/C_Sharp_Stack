
<div class="mx-auto w-75">
    <div class="row">
        <div class="col-8">
            <h2><a href="/">Chefs</a> | Dishes</h2>
        </div>
        <div class="col text-right">
            <a href="/dishes/new">Add a dish</a>
        </div>
    </div>
    <div class="w-75 border-bottom border-dark">
        <h4>Yum, take a look at our tasty dishes!</h4>
    </div>
    <table class="table table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Chef</th>
                <th scope="col">Tastiness</th>
                <th scope="col">Calories</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var i in ViewBag.d){
                    <tr>
                        <th scope="row">@i.Name</th>
                            @{
                                foreach(var x in ViewBag.c){
                                    if(x.ChefId == i.ChefId){
                                        <td>@x.FName @x.LName</td>
                                    }
                                }
                            }
                        <td>@i.Tastiness</td>
                        <td>@i.Calories</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>